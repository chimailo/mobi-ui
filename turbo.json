{
	"$schema": "https://turbo.build/schema.json",
	"ui": "tui",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"inputs": ["$TURBO_DEFAULT$", ".env*", "!**/*.stories.{tsx,jsx,mdx}"],
			"outputs": [".next/**", "!.next/cache/**", "dist/**"]
		},
		"docs#typecheck": {
			"dependsOn": ["@mobi/ui#build"]
		},
		"web#typecheck": {
			"dependsOn": ["@mobi/ui#build"]
		},
		"test": {
			"inputs": ["$TURBO_DEFAULT$", ".env*", "!**/*.stories.{tsx,jsx,mdx}"]
		},
		"//#format-and-lint": {
			"dependsOn": ["format-and-lint:fix"]
		},
		"//#format-and-lint:fix": {
			"cache": false
		},
		"dev": {
			"cache": false,
			"persistent": true
		}
	}
}
